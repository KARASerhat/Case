<input type="button" value="HESAPLA" id="process">
<script>

function process(){

var numb=document.getElementById("numb").value;
 
numb=Number(numb);
 
if(numb%2==0)
{
window.alert(" EVEN ");
}
else
{ 
window.alert(" ODD ");
}
}
 
var processBtn=document.getElementById("process");
 processBtn.onclick=process;
 
 
